{
    "manifest_version": 2,
  
    "name": "HarshaStrix Launcher",
    "description": "Quick launch HarshaStrix",
    "version": "1.0.0",
    "icons": { "128": "icon_128.png" },
    "web_accessible_resources": ["avatar.jpg"],
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "permissions": ["activeTab"]
  }